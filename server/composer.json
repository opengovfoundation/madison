{
    "name": "opengovfoundation/madison",
    "description": "Madison 2.0",
    "keywords": ["open", "gov"],
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/changwuf31/remote"
        }
    ],
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "artdarek/oauth-4-laravel": "~1.0",
        "overtrue/laravel-lang": "~1.0",
        "graham-campbell/markdown": "~5.3",
        "doctrine/dbal": "2.5.*",
        "roumen/sitemap": "2.4.*",
        "roumen/feed": "~2.10",
        "zizaco/entrust": "dev-laravel-5",
        "league/csv": "8.0.*",
        "intervention/image": "2.3.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "ddelnano/dredd-hooks-php": "^1.1"
    },
    "autoload": {
        "classmap": [
            "app/Models/",
            "app/Http/Controllers/Controller.php",
            "app/Http/Controllers/",
            "app/Console/Commands/",
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
